<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin Khoa Dược</title>

    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="@Url.Content("~/css/metisMenu.min.css")" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="@Url.Content("~/css/startmin.css")" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="@Url.Content("~/css/font-awesome.min.css")" rel="stylesheet" type="text/css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
</head>
<body>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1></h1>
                    <br />
                    @if (TempData["AlertMessage"] != null)
                    {
        <div class="alert @TempData["AlertType"] hide" id="alertBox">
            @TempData["AlertMessage"]
        </div>}
                    @RenderBody()
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
    </div>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action("Index","Admin")"><i class="fa fa-dashboard fa-fw"></i>CÂY THỰC VẬT</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","NganhThucVats")"><i class="fa fa-dashboard fa-fw"></i>Ngành thực vật</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","LopThucVats")"><i class="fa fa-dashboard fa-fw"></i>Lớp thực vật</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","PhanLopThucVats")"><i class="fa fa-dashboard fa-fw"></i>Phân lớp thực vật</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","BoThucVats")"><i class="fa fa-dashboard fa-fw"></i>Bộ thực vật</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","HoThucVats")"><i class="fa fa-dashboard fa-fw"></i>Họ thực vật</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","ChiThucVats")"><i class="fa fa-dashboard fa-fw"></i>Chi thực vật</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","LoaiThucVats")"><i class="fa fa-dashboard fa-fw"></i>Loài thực vật</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","ThanhPhanHoaHocs")"><i class="fa fa-dashboard fa-fw"></i>Thành phần hóa học</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="@Url.Content("~/js/jquery.min.js")"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="@Url.Content("~/js/metisMenu.min.js")"></script>

    <!-- Custom Theme JavaScript -->
    <script src="@Url.Content("~/js/startmin.js")"></script>


    <script src="@Url.Content("~/js/dataTables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/js/dataTables/dataTables.bootstrap.min.js")"></script>
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
        $('#alertBox').removeClass('hide');
        $('#alertBox').delay(1000).slideUp(500);
    </script>
</body>
</html>
