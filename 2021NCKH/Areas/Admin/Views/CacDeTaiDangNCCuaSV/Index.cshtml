@model IEnumerable<_2021NCKH.Models.CacDeTaiDangNCCuaSV>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">

        <h2>Index</h2>
            <a href="@Url.Action("Create","CacDeTaiDangNCCuaSV")" class="btn btn-sm btn-success">Thêm đề tài nguyên cứu của SV</a>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i>  Danh sách các đề tài
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Tên dề tài</th>
                                    <th>Hình ảnh</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Tên đề tài</th>
                                    <th>Hình ảnh</th>
                                    <th>Chức năng</th>
                                </tr>
                            </tfoot>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.TenCacDeTaiDangNCCuaSV
                                        </td>

                                        <td>
                                            <img src="@Url.Action("Picture", new { item.MaCacDeTaiDangNCCuaSV })" width="100" />
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaCacDeTaiDangNCCuaSV }) |
                                            @Html.ActionLink("Xoá", "Delete", new { id = item.MaCacDeTaiDangNCCuaSV })

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer small text-muted">Truy cập @DateTime.Now</div>
            </div>
        </div>
    </div>
</div>
