@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!Doctype html>
<html lang="en">
<head>
    <title>Login Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/assets-login/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Admin Dược</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4"></h3>
                        <form action="~/Admin/Admin/Login" method="post" class="login-form">
                            <div class="form-group">
                                <input type="email" class="form-control rounded-left" placeholder="Username" name="email" required oninvalid="this.setCustomValidity('vui lòng không bỏ trống và nhập đúng định dạng !')" oninput="setCustomValidity('')" />
                            </div>
                            <div class="form-group d-flex">
                                <input type="password" class="form-control rounded-left" placeholder="Password" name="password" required oninvalid="this.setCustomValidity('vui lòng không bỏ trống!')" oninput="setCustomValidity('')" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng nhập</button>
                            </div>
                            <div class="form-group">
                                <p class="text-danger">@ViewBag.Message</p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Areas/Admin/assets-login/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/assets-login/js/popper.js"></script>
    <script src="~/Areas/Admin/assets-login/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets-login/js/main.js"></script>

</body>
</html>

