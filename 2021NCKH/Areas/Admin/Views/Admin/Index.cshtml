    @model IEnumerable<_2021NCKH.Models.admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <h2>Index</h2>
            <div class="col-md-6 text right">
                <a href="@Url.Action("Create","Admin")" class="btn btn-sm btn-success">Thêm Admin</a>
            </div>
            
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i>  Danh sách các admin
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Tên Admin</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Tên admin</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>Chức năng</th>
                                </tr>
                            </tfoot>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.username
                                        </td>
                                        <td>
                                            @item.email
                                        </td>
                                        <td>
                                            @item.password
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Delete","Admin", new { id = item.admin_id})" class="btn btn-sm btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer small text-muted">Last updated at @DateTime.Now</div>
            </div>
        </div>
    </div>
</div>
